<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_copy"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#04A9A9"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_copy" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mUserImage"
        android:layout_below="@id/top"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/profile" />

    <LinearLayout
        android:id="@+id/commentHead"
        android:layout_below="@id/mUserImage"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/strip1"
        android:weightSum="1" >

        <TextView
            android:id="@+id/mAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".9"
            android:padding="3dp"
            android:singleLine="true"
            android:text="smilingmonkey@ wester row"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/mEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight=".1"
            android:padding="3dp"
            android:src="@drawable/edit_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/commentLayout"
        android:layout_below="@id/commentHead"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:background="#71D0C8"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/mSmilingMoneky"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight=".3"
                android:src="@drawable/smily" />

          <ScrollView
                android:id="@+id/textAreaScroller"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight=".7"
               android:scrollbars="none" >

            <TextView
                android:id="@+id/mCommentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="I love this place!  I love this place! I love this place! I love this place! I love this place! I love this place! I love this place! I love this place! "
                android:textColor="#04A9A9"
                android:textSize="18sp"
                android:textStyle="bold" />
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_below="@id/commentLayout"
        android:id="@+id/mNextCommentPage"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/right_arrow" />
    
   
    <LinearLayout android:layout_height="100dp"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
    <ImageView 
        android:layout_height="2dp"
        android:src="@drawable/dott"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"/>
<ImageView 
        android:layout_height="wrap_content"
        android:src="@drawable/lower_bg"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"/>
</LinearLayout>
</RelativeLayout>